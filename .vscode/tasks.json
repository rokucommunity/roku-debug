{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "test",
            "command": "npm",
            "args": [
                "run",
                "test:nocover",
                "--silent"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "label": "build",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch",
                "--loglevel",
                "silent"
            ],
            "presentation": {
                "group": "watch",
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
    ]
}