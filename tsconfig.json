{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "inlineSourceMap": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
      "transpileOnly": true
  }
}