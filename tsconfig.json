{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedLocals": false,
    "noImplicitThis": true,
    "inlineSourceMap": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "noUnusedParameters": false,
    "strictBindCallApply": true,
    "lib": [
        "es2017",
        "es2019.array",
        "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
      "transpileOnly": true
  }
}
